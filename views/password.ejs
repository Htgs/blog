<%- include('header') -%>
	<div class="container">
		<div class="row">
			<form class="col-md-6 col-md-offset-3 col-lg-6 col-lg-offset-3" method="post">
				<div class="form-group">
					<label for="npassword">新密码</label>
					<input type="password" class="form-control" id="npassword" name="npassword" placeholder="请输入密码" aria-describedby="help-npassword">
					<span id="help-npassword" class="help-block"></span>
				</div>
				<div class="form-group">
					<label for="renpassword">确认新密码</label>
					<input type="password" class="form-control" id="renpassword" name="renpassword" placeholder="请输入密码" aria-describedby="help-renpassword">
					<span id="help-renpassword" class="help-block"></span>
				</div>
				<input type="submit" class="btn btn-primary" value="提交">
			</form>
		</div>
	</div>
