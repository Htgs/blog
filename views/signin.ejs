<%- include('header') -%>
	<div class="container">
		<div class="row">
			<div class="col-md-6 col-lg-6">
				<div class="jumbotron">
					<h2><%= blog.title %><small><%= blog.subTitle %></small></h2>
					<p><%= blog.description %></p>
					<p><a class="btn btn-link btn-lg" href="/signup" role="button">注册</a></p>
				</div>
			</div>
			<form class="col-md-6 col-lg-6" method="post">
				<div class="form-group">
					<label for="username">用户名</label>
					<input type="text" id="username" name="username" class="form-control" placeholder="请输入名称">
				</div>
				<div class="form-group">
					<label for="password">密码</label>
					<input type="password" id="password" name="password" class="form-control" placeholder="请输入密码">
				</div>
				<div class="checkbox">
					<label>
						<input type="checkbox"> 记住账号
					</label>
				</div>
				<input type="submit" class="btn btn-primary" value="登录">
			</form>
		</div>
	</div>
<%- include('footer') -%>