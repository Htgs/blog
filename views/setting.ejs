<%- include('header') -%>
	<div class="container">
		<div class="row">
			<form class="col-md-6 col-md-offset-3 col-lg-6 col-lg-offset-3" method="post" enctype="multipart/form-data">
				<div class="form-group relative">
					<label for="avater">头像上传</label>
					<!-- <input type="button" class="btn btn-primary btn-upload" value="选择图片"> -->
					<input type="file" id="avater" name="avater" class="form-control" placeholder="请输入名称" aria-describedby="help-avatar">
					<span id="help-avater" class="help-block"></span>
				</div>
				<div class="form-group">
					<label>性别</label>
					<select class="form-control" name="gender">
						<option value="m">男</option>
						<option value="f">女</option>
						<option value="x">保密</option>
					</select>
					<span id="help-password" class="help-block"></span>
				</div>
				<div class="form-group">
					<label for="bio">简介</label>
					<textarea class="form-control" id="bio" name="bio" placeholder="请输入简介" style="resize: none;" rows="5" aria-describedby="help-content"></textarea>
					<span id="help-repassword" class="help-block"></span>
				</div>
				<input type="submit" class="btn btn-primary" value="修改">
			</form>
		</div>
	</div>
<%- include('footer') -%>
