<%- include('header') -%>
	<div class="container">
		<div class="row">
			<form class="col-md-6 col-md-offset-3 col-lg-6 col-lg-offset-3" method="post" name="article" action="<%= article.url %>">
				<div class="form-group required">
					<label for="title">标题</label>
					<input type="text" id="title" name="title" class="form-control" placeholder="请输入标题" aria-describedby="help-title" value="<%= article.title %>">
					<span id="help-title" class="help-block"></span>
				</div>
				<div class="form-group required">
					<label for="content">内容</label>
					<textarea class="form-control" id="content" name="content" placeholder="请输入内容" aria-describedby="help-content" style="resize:none" rows="20"><%= article.content %></textarea>
					<span id="help-content" class="help-block"></span>
				</div>
				<% if (article.content) { %>
				<input type="submit" class="btn btn-primary" value="保存">
				<% } else { %>
				<input type="submit" class="btn btn-primary" value="发表">
				<% } %>
				<!-- <input type="button" class="btn btn-primary" value="发表" id="createArticle"> -->
			</form>
		</div>
	</div>
	<script>
		$('#createArticle').on('click', function () {
			let form = document.forms['article']
			$.ajax({
				url: './',
				type: 'post',
				data: $(form).serialize(),
			})
			.done(function() {
				console.log("success");
			})
			.fail(function() {
				console.log("error");
			})
			.always(function() {
				console.log("complete");
			});
			
		})
	</script>
<%- include('footer') -%>